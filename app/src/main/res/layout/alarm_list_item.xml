<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/alarm_list_item"
    android:background="@color/white"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="20dp"
        android:id="@+id/alarm_list_item_time"
        android:textSize="35sp"
        android:textStyle="bold"
        android:text="Time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alarm_list_item_state"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="A.M"
        android:layout_toRightOf="@+id/alarm_list_item_time"
        android:layout_alignBaseline="@+id/alarm_list_item_time"
        android:layout_toEndOf="@+id/alarm_list_item_time" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:textSize="25sp"
        android:padding="10dp"
        android:id="@+id/alarm_list_item_toggleButton"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/alarm_list_item_time" />

    <!--
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/alarm_list_item_time"
            android:textStyle="bold"
            android:text="Alarm"
            android:textSize="20sp"/>
             -->
</RelativeLayout>